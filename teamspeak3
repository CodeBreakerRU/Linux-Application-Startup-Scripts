# /lib/systemd/system/ts3server.service

[Unit]
Description=TeamSpeak3 Server
Wants=network-online.target
After=syslog.target network.target local-fs.target

[Service]
WorkingDirectory=/home/teamspeak/ # path to TeamSpeak Installation Directory
User=teamspeak # Username
Group=teamspeak # Group
Type=forking
ExecStart=/home/teamspeak/ts3server_startscript.sh start license_accepted=1 # Startup Script Path
ExecStop=/home/teamspeak/teamspeak/ts3server_startscript.sh stop # Startup Script Path to stop server
ExecReload=/home/teamspeak/teamspeak/ts3server_startscript.sh restart # Startup Script Path to restart the server
Restart=always # If the server is down it will attempt to start automatically
RestartSec=15

[Install]
WantedBy=multi-user.target
